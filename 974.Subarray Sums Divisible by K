class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int n=nums.size();
        unordered_map<int,int>res;
        int sum=0;
        int count=0;
        res[0]=1;
        for(int num:nums){
            sum+=num;
            int rem=sum%k;
            if(rem<0){
                rem+=k;
            }
             if (res.find(rem) != res.end()) {

                count+=res[rem];
            }
            res[rem]++;
        }
        return count;
    }
};
